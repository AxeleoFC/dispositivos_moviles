<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AplicacionComida" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AplicacionComida" parent="Base.Theme.AplicacionComida">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="textTitle">
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonsGeneral" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="cornerRadius">12dp</item>
    </style>
    <style name="ButtonsIngresar" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/red</item>
    </style>
    <style name="ButtonsFace" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/blue</item>
    </style>
    <style name="ButtonsTewt" parent="ButtonsGeneral">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/celeste</item>
    </style>
    <style name="search">
        <item name="android:backgroundTint">@color/title_color_dm</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>